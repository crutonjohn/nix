groups:
  - name: opentelemetry-collector
    rules:
      - alert: OTelLogSendFailure
        expr: sum by (pod,host,environment) (rate(otelcol_exporter_send_failed_log_records{}[5m])) * 100 > 50
        for: 10m
        labels:
          severity: critical
        annotations:
          summary: "{{ $labels.pod }} on labels.node Failed Sending 50% of logs"
          description: Collector has restarted or it reached some limits
      - alert: OTelQueueCapacity
        expr: sum by (pod,host,environment) ((otelcol_exporter_queue_size / otelcol_exporter_queue_capacity) * 100) > 50
        for: 10m
        labels:
          severity: critical
        annotations:
          summary: "{{ $labels.pod }} on labels.node Queue Backing Up"
          description: Destination has a problem or used payload is not correct